---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.svelte";
import Footer from "../components/Footer.svelte";

const title = "Page Not Found | Eat at Franco";
const description =
  "The page you are looking for could not be found. Return to the Eat at Franco homepage.";
const canonical = "https://eatatfranco.com/";
---

<BaseLayout title={title} description={description} canonical={canonical}>
  <Navbar client:load />

  <!-- 404 Content -->
  <section
    class="min-h-screen flex items-center justify-center px-4 py-32 bg-hero-pattern bg-cover bg-center bg-fixed relative"
  >
    <div class="absolute inset-0 bg-darker/90"></div>

    <div class="relative z-10 text-center max-w-xl mx-auto">
      <!-- 404 Number -->
      <div class="mb-8">
        <span
          class="font-serif text-[150px] md:text-[200px] text-gold/20 leading-none block"
          >404</span
        >
      </div>

      <!-- Message -->
      <h1 class="font-serif text-3xl md:text-5xl text-white mb-6">
        Page Not Found
      </h1>
      <p class="font-sans text-gray-400 mb-10 leading-relaxed">
        The page you're looking for seems to have wandered off. Perhaps it's
        enjoying a fine meal somewhere?
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="btn-primary">
          <i class="fa-solid fa-home mr-2"></i>
          Return Home
        </a>
        <a href="/dinner-menu" class="btn-outline"> View Our Menu </a>
      </div>

      <!-- Auto-redirect notice -->
      <p id="redirect-notice" class="mt-12 text-sm text-gray-500 hidden">
        Redirecting to home in <span id="countdown">5</span> seconds...
      </p>
    </div>
  </section>

  <Footer client:load />
</BaseLayout>

<script>
  // Optional: Auto-redirect after 10 seconds
  const redirectNotice = document.getElementById("redirect-notice");
  const countdownEl = document.getElementById("countdown");
  let countdown = 5;

  if (redirectNotice && countdownEl) {
    redirectNotice.classList.remove("hidden");

    const timer = setInterval(() => {
      countdown--;
      countdownEl.textContent = String(countdown);

      if (countdown <= 0) {
        clearInterval(timer);
        window.location.href = "/";
      }
    }, 1000);
  }
</script>
